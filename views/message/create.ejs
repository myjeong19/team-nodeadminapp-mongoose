<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>신규 메세지 등록</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home-></a>
      </li>
      <li>
        <a>신규 메세지 -></a>
      </li>
      <li class="active">
        <strong>등록</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/message/create" id="adminForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">닉네임</label>
            <input
              type="text"
              name="nick_name"
              id="nick_name"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">접속id</label>
            <input
              type="text"
              name="connection_id"
              id="connection_id"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">멤버id</label>
            <input
              type="text"
              name="member_id"
              id="member_id"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">ip주소</label>
            <input
              type="text"
              name="ip_address"
              id="ip_address"
              class="form-control"
              required
              maxlength="100"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">채널</label>
            <select name="channel_id" id="channel_id" class="form-control">
              <option value="1">연구소채널</option>
              <option value="2">모름캠프채널</option>
              <option value="3">구글채널</option>
              <option value="4">삼성채널</option>
            </select>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">메세지 타입</label>
            <select
              name="msg_type_code"
              id="msg_type_code"
              class="form-control"
            >
              <option value="1">입장</option>
              <option value="0">퇴장</option>
              <option value="3">일반메세지</option>
              <option value="4">파일메세지</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">내용</label>
            <input
              type="text"
              name="message"
              id="message"
              class="form-control"
              required
              maxlength="1000"
            />
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/message/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

